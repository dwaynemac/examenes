<h1><%= @person.name %></h1>

<%- @evaluation_dates.each do |evaluation_date| -%>

  <h2><%= l(evaluation_date, :format => :month) %></h2>

  <%- if @evaluations.first.model.date == evaluation_date -%>
    <%- @evaluations.each do |evaluation| -%>

      <table>
        <tr>
          <td></td>
          <%- @evaluations.each do |e| -%>
            <th><%= e.evaluator_name %></td>
          <%- end -%>
        </tr>
        <tr>
          <th>
            <%= t('evaluation.attributes.total_grade') %>
          </th>
          <% @evaluations.each do |e| %>
            <td>
              <%= e.total_grade %>
            </td>
        <%- end -%>
        </tr>
        <%- %W(theory draw coreography practice swasthya beginners lesson disertation).each do |section| -%>
          <tr>
            <th><%= section %></th>
            <%- @evaluations.each do |e| -%>
              <td>
                <%= e.parser.send("#{section}_grade") %>
              </td>
          <%- end -%>
          </tr>
        <%- end -%>
      </table>
    <%- end -%>

    <%- %W(draw coreography swasthya beginners disertation).each do |section| -%>
      <h3><%= section %></h3>

      <%- @evaluations.each do |e| -%>
        <h4><%= e.evaluator_name %></h4>
        <p>
          <%= e.parser.send("#{section}_observations").gsub(/\n/,"<br/>").html_safe %>
        </p>
      <%- end -%>
    <%- end -%>

  <%- end -%>
<%- end -%>
