<h1><%= @person.name %></h1>

<table class="table">
  <tr>
    <th>Fecha</th>
    <th>Evaluador</th>
    <th>Nota General</th>
    <th>Resultado</th>
    <th></th>
  </tr>
  <%- @evaluations.each do |evaluation| -%>
    <%# render :partial => 'evaluation_DEPRECATED' %>
    <tr>
      <td><%= evaluation.date %></td>
      <td><%= evaluation.evaluator_name %></td>
      <td><%= evaluation.total_grade %></td>
      <td><%= evaluation.result %></td>
      <td>
        <div class="btn-group">
          <%= link_to t('detail'), evaluation, class: 'btn' %>
          <%= link_to t('delete'), evaluation, method: :delete, confirm: t('confirm'), class: 'btn' %>
        </div>
      </td>
    </tr>
  <%- end -%>
</table>
